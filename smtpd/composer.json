{
	"name": "mambaru/smtpd",
	"description": "Fork thefox/smtpd. SMTP server (library) written in PHP. In this fork we use eXorus/php-mime-mail-parser as mail parser instead of zend::message",
	"license": "GPLv3",
	"type": "library",
	"keywords": [ "smtp", "email", "mail", "server", "daemon" ],
	"homepage": "http://fox21.at",
	"authors": [
		{
			"name": "Christian Mayer",
			"email": "christian@fox21.at",
			"homepage": "http://fox21.at"
		}
	],
	"require": {
		"php": ">=5.3",
		"zendframework/zend-mail": "~2.3",
		"symfony/console": "~2.5",
		"symfony/filesystem": "~2.5",
		"liip/process-manager": "~1.0",
		"exorus/php-mime-mail-parser": "1.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.1",
		"thefox/phpcsrs": "~1.0",
		"thefox/utilities": "~1.1",
		"phpmailer/phpmailer": "~5.2"
	},
	"autoload": {
		"psr-0": {
			"TheFox": "src"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "0.2.x-dev"
		}
	}
}
